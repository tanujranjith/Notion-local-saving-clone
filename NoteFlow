        .link-tooltip button {
            background: none;
            border: none;
            color: var(--text-secondary);
            cursor: pointer;
            padding: 4px;
            border-radius: 4px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .link-tooltip button:hover {
            background: var(--bg-hover);
            color: var(--text-primary);
        }

